    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'asteroids'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=asteroids",
                    "--package=asteroids"
                ],
                "filter": {
                    "name": "asteroids",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "RUST_LOG": "warn,asteroids=info,winit=error"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'asteroids'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=asteroids",
                    "--package=asteroids"
                ],
                "filter": {
                    "name": "asteroids",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}